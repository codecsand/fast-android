<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/img11"
                android:id="@+id/postImage"
                android:adjustViewBounds="true"
                android:background="#ffffff"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/postPreviewImage"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:visibility="gone"
                />

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/image_progress_wheel"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                wheel:matProg_barColor="#aaaaaa"
                wheel:matProg_progressIndeterminate="true"
                wheel:matProg_barWidth="1dp"
                wheel:matProg_circleRadius="30dip"
                wheel:matProg_spinSpeed="2.5"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand Name"
                android:textColor="#1a1a1a"
                android:id="@+id/postTitle"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, sale eloquentiam an mel, eros tota pri ei. Eu per dictas aperiri dolorem"
                android:textColor="#787878"
                android:id="@+id/postContent"
                android:padding="10dp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:id="@+id/tags"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#marka"
                    android:background="#efefef"
                    android:textColor="#838383"
                    android:padding="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#marka"
                    android:background="#efefef"
                    android:textColor="#838383"
                    android:padding="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="2dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img15"
                    android:id="@+id/authorImage"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author Name"
                    android:textColor="#41a6ea"
                    android:id="@+id/postAuthor"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#11cccccc"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/likerepostwish"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="8dp"

            >

            <ToggleButton
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:background="@drawable/hearpost"
                android:layout_marginLeft="16dp"
                android:textOn=""
                android:textOff=""
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/likepost"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#9b9b9b"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="1dp"
                android:textSize="14sp"
                android:id="@+id/likecount"
                />

            <ToggleButton
                android:layout_width="28dp"
                android:layout_height="23dp"
                android:background="@drawable/repostpost"
                android:layout_marginLeft="16dp"
                android:textOn=""
                android:textOff=""
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/repostpost"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#9b9b9b"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="1dp"
                android:textSize="14sp"
                android:id="@+id/repostcount"
                />

            <ToggleButton
                android:layout_width="23dp"
                android:layout_height="24dp"
                android:background="@drawable/wishpost"
                android:layout_marginLeft="16dp"
                android:textOn=""
                android:textOff=""
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/wishpost"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#9b9b9b"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="1dp"
                android:textSize="14sp"
                android:id="@+id/wishcount"
                android:visibility="gone"
                />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/categoryNameRelative"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/categoryNameLinear"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Category Name"
                android:background="#269ce4"
                android:textColor="#ffffff"
                android:id="@+id/categoryName"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:background="@drawable/rightarrow"
                android:id="@+id/rightarrow"
                />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>